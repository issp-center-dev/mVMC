include make.sys

OUT = vmc.out
SRC = vmcmain.c
PFAPACK = pfapack/libpfapack.a
SFMT = sfmt/SFMT.o
STDFACE = StdFace/libStdFace.a
OBJS = vmcmain.o $(PFAPACK) $(SFMT) $(STDFACE)
OPTION = -D_mpi_use

SOURCES = \
average.c \
avevar.c \
calgrn.c \
calgrn_fsz.c \
calham.c \
calham_real.c \
calham_fsz.c \
gauleg.c \
initfile.c \
legendrepoly.c \
locgrn.c \
locgrn_real.c \
locgrn_fsz.c \
lslocgrn.c \
matrix.c \
parameter.c \
pfupdate.c \
pfupdate_fsz.c \
pfupdate_real.c \
pfupdate_two_fcmp.c \
pfupdate_two_fsz.c \
pfupdate_two_real.c \
projection.c \
qp.c \
qp_real.c \
readdef.c \
safempi.c \
safempi_fcmp.c \
setmemory.c \
slater.c \
slater_fsz.c \
splitloop.c \
stcopt_dposv.c \
stcopt_pdposv.c \
time.c \
vmccal.c \
vmccal_fsz.c \
vmcdry.c \
vmcmain.c \
vmcmake.c \
vmcmake_fsz.c \
vmcmake_real.c \
workspace.c

HEADERS = \
include/avevar.h \
include/global.h \
include/parameter.h \
include/readdef.h \
include/readdef_core.h \
include/safempi.h \
include/safempi_fcmp.h \
include/version.h \
include/vmcmain.h

all : 
	cd pfapack; $(MAKE) -f makefile_pfapack
	cd sfmt; $(MAKE) -f makefile_sfmt
	cd StdFace; $(MAKE) -f makefile_StdFace libStdFace.a
	make -f makefile_src vmc.out
	make -f makefile_src vmcdry.out
	cd ComplexUHF/src; $(MAKE) -f makefile_uhf

vmc.out : $(OBJS) $(STDFACE)
	$(CC) -o $(OUT) $(OBJS) $(STDFACE) $(OPTION) $(CFLAGS) $(LIBS)

vmcdry.out : vmcdry.o $(STDFACE)
	$(CC) $< -o $@ $(STDFACE) $(OPTION) $(CFLAGS) $(LIBS)

vmcmain.o : $(SOURCES) $(HEADERS)
	$(CC) -c $(SRC) $(OPTION) $(CFLAGS) -I ./include/

vmcdry.o : vmcdry.c
	$(CC) -c vmcdry.c $(OPTION) $(CFLAGS) -I ./include/

clean :
	rm -f *.o vmc.out
	cd sfmt; $(MAKE) -f makefile_sfmt clean
	cd pfapack; $(MAKE) -f makefile_pfapack clean
	cd StdFace; $(MAKE) -f makefile_StdFace clean
	cd ComplexUHF/src; $(MAKE) -f makefile_uhf clean

