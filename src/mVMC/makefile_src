include ../make.sys

PFAPACK = ../pfapack/libpfapack.a
PFAFFINE = ../pfaffine/src/libpfaffine.a
PFUPDATES = ../pfupdates/pfupdates.o
SFMT = ../sfmt/SFMT.o
STDFACE = ../StdFace/libStdFace.a
OPTION = -D_mpi_use

# Not defining BLIS_ROOT indicates a MKL compilation.
ifneq ($(BLIS_ROOT),)
	# This is better handled by make.sys due to linkage order.
        # LIBS += -L$(BLIS_ROOT)/lib -lblis
        LIBS += -Wl,-rpath,$(BLIS_ROOT)/lib
endif

OBJS = \
	physcal_lanczos.o \
	splitloop.o \
	vmcmain.o \
	$(PFAPACK) $(SFMT) $(STDFACE) \
	$(PFUPDATES) $(PFAFFINE)

SOURCES = \
average.c \
avevar.c \
calgrn.c \
calgrn_fsz.c \
calham.c \
calham_real.c \
calham_fsz.c \
gauleg.c \
initfile.c \
legendrepoly.c \
locgrn.c \
locgrn_real.c \
locgrn_fsz.c \
lslocgrn.c \
lslocgrn_real.c \
matrix.c \
parameter.c \
pfupdate.c \
pfupdate_fsz.c \
pfupdate_real.c \
pfupdate_two_fcmp.c \
pfupdate_two_fsz.c \
pfupdate_two_real.c \
projection.c \
qp.c \
qp_real.c \
readdef.c \
safempi.c \
safempi_fcmp.c \
setmemory.c \
slater.c \
slater_fsz.c \
splitloop.c \
stcopt_dposv.c \
stcopt_pdposv.c \
stcopt_cg.c \
vmccal.c \
vmccal_fsz.c \
vmcdry.c \
vmcmain.c \
vmcclock.c \
vmcmake.c \
vmcmake_fsz.c \
vmcmake_real.c \
workspace.c

HEADERS = \
./include/average.h \
./include/avevar.h \
./include/calgrn.h \
./include/calham.h \
./include/calham_real.h \
./include/gauleg.h \
./include/global.h \
./include/initfile.h \
./include/legendrepoly.h \
./include/locgrn.h \
./include/locgrn_real.h \
./include/lslocgrn.h \
./include/lslocgrn_real.h \
./include/matrix.h \
./include/parameter.h \
./include/pfupdate.h \
./include/pfupdate_real.h \
./include/pfupdate_two_fcmp.h \
./include/pfupdate_two_real.h \
./include/physcal_lanczos.h \
./include/projection.h \
./include/qp.h \
./include/qp_real.h \
./include/readdef.h \
./include/setmemory.h \
./include/slater.h \
./include/splitloop.h \
./include/stcopt_dposv.h \
./include/stcopt_pdposv.h \
./include/version.h \
./include/vmccal.h \
./include/vmcmain.h \
./include/vmcmake.h \
./include/vmcmake_real.h \
./include/workspace.h

all : 
	$(MAKE) -C ../pfapack     -f makefile_pfapack
	$(MAKE) -C ../pfaffine/src                   libpfaffine.a
	$(MAKE) -C ../pfupdates  -f makefile_pfupdates
	$(MAKE) -C ../sfmt       -f makefile_sfmt
	$(MAKE) -C ../StdFace    -f makefile_StdFace libStdFace.a
	$(MAKE)                  -f makefile_src vmc.out
	$(MAKE)                  -f makefile_src vmcdry.out
	$(MAKE) -C ../ComplexUHF -f makefile_uhf

vmc.out : $(OBJS)
	$(CXX) -o $@ $(OBJS) $(OPTION) $(CFLAGS) $(LIBS)

vmcdry.out : vmcdry.o $(STDFACE)
	$(CXX) -o $@ $^ $(OPTION) $(CFLAGS) $(LIBS)

SUFFIXES: .o .c

.c.o:
	$(CC) $(OPTION) $(CFLAGS) -I ./include -c $<

clean :
	rm -f *.o vmc.out vmcdry.out
	$(MAKE) -C ../sfmt       -f makefile_sfmt      clean
	$(MAKE) -C ../pfapack    -f makefile_pfapack   clean
	$(MAKE) -C ../pfaffine   -f makefile           clean
	$(MAKE) -C ../pfupdates  -f makefile_pfupdates clean
	$(MAKE) -C ../StdFace    -f makefile_StdFace   clean
	$(MAKE) -C ../ComplexUHF -f makefile_uhf       clean

physcal_lanczos.o:$(SOURCES) $(HEADERS)
splitloop.o:$(SOURCES) $(HEADERS)
vmcdry.o:$(SOURCES) $(HEADERS)
vmcmain.o:$(SOURCES) $(HEADERS)
